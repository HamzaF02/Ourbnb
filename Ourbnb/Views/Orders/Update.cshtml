@model CreateOrder

<h2>Update Order</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Update">
    <input type="hidden" asp-for="Order.OrderId" />
    <input type="hidden" asp-for="Order.Customer" />
    <input type="hidden" asp-for="Order.Rental" />


    <label>Rental: @Model.Rental.Name</label>
    <input asp-for="Order.RentalId" type="hidden" value="@Model.Rental.RentalId">

    <div class="form-group">
        <label asp-for="Order.CustomerId"></label>
        <select asp-for="Order.CustomerId" asp-items="Model.CustomerList" class="form-control">
            <option value="">Choose an Customer</option>
        </select>
        <span asp-validation-for="Order.CustomerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Order.From" asp-item></label>
        <input asp-for="Order.From" class="form-control" type="date" />
        <span asp-validation-for="Order.From" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Order.To"></label>
        <input asp-for="Order.To" class="form-control" type="date" />
        <span asp-validation-for="Order.To" class="text-danger"></span>
    </div>
    <div class="form-group">
    
    <div class="form-group">
        <label asp-for="Order.Rating"></label>
        <input asp-for="Order.Rating" class="form-control" />
        <span asp-validation-for="Order.Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Order.TotalPrice"></label>
        <input asp-for="Order.TotalPrice" class="form-control" />
        <span asp-validation-for="Order.TotalPrice" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="ListofOrders" class="btn btn-secondary">Back to Orders</a>
</form>
