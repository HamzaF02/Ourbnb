@{
    ViewData["Title"] = "Create Order";
}
@model CreateOrder

<h2>Create New Order</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>Rental:</label>
        <p>@Model.Rental.Name</p>
        <input asp-for="Order.RentalId" type="hidden" value="@Model.Rental.RentalId">
    </div>
    <div class="form-group">
        <label>Customer:</label>
        <p>@Model.Customer.FirstName @Model.Customer.LastName</p>
        <input asp-for="Order.CustomerId" type="hidden" value="@Model.Customer.CustomerId">
    </div>
    <p>Available from @Model.Rental.FromDate.ToString("d") to @Model.Rental.ToDate.ToString("d")</p>
    <div class="form-group">
        <label asp-for="Order.From" asp-item></label>
        <input asp-for="Order.From" class="form-control" min="2023-01-01" value="" type="date" />
        <span asp-validation-for="Order.From" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Order.To"></label>
        <input asp-for="Order.To" class="form-control" min="2023-01-01" value="" type="date" />
        <span asp-validation-for="Order.To" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Order.Rating"></label>
        <input asp-for="Order.Rating" class="form-control" />
        <span asp-validation-for="Order.Rating" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="Rental" asp-action="Grid" class="btn btn-secondary">Back to Rentals</a>
</form>
