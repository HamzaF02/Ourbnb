@model IEnumerable<Ourbnb.Models.Order>
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager



<style>

    body {
        background-color: #8baec9;
    }

</style>


<h1>List of Orders</h1>

<div style="background-color:white; padding:20px; border-radius:20px; margin-top:50px;">



    <div style="overflow-x:auto;  ">
        <table class="table table-striped table-dark " style="margin-top:30px; width: 100%; border-collapse: collapse; ">
            <thead>
                <tr>
                    <th scope="col">Order #</th>
                    <th scope="col">From</th>
                    <th scope="col">To</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Customer</th>
                    <th scope="col">Rental</th>
                    <th scope="col">Total Price</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item != null)
                    {

                        if (item.Customer.IdentityId == UserManager.GetUserId(User))
                        {


                            <tr>

                                <td>@item.OrderId</td>
                                <td>@item.From.ToString("d")</td>
                                <td>@item.To.ToString("d")</td>
                                <td>@item.Rating</td>
                                <td>@item.Customer.FirstName @item.Customer.LastName</td>
                                <td>@item.Rental.Name</td>
                                <td>@item.TotalPrice</td>
                                <td>
                                    <button asp-controller="Orders" asp-action="Update" class="btn btn-info">Update</button>
                                    <button asp-controller="Orders" asp-action="Delete" class="btn btn-danger">Delete</button>
                                </td>

                            </tr>
                        }
                        else
                        {

                            <tr>

                                <td>@item.OrderId</td>
                                <td>@item.From.ToString("d")</td>
                                <td>@item.To.ToString("d")</td>
                                <td>@item.Rating</td>
                                <td>@item.Customer.FirstName @item.Customer.LastName</td>
                                <td>@item.Rental.Name</td>
                                <td>@item.TotalPrice</td>
                                <td>
                                </td>

                            </tr>

                        }


                    }
                }
            </tbody>
        </table>
    </div>


    <button class="btn btn-outline-info info" style="margin-top:30px;">
        <a class="link-dark" style="text-decoration:none;" asp-controller="Home" asp-action="Index">Go back Home</a>
    </button>

</div>