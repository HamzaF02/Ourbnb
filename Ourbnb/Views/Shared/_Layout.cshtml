<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ourbnb</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

</head>
<style>

    #reg:hover {
        color: white;
    }

    #reg{
        color:black;
    }

</style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px; height:80px">
            <div class="container-fluid" style="margin-left:30px;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ourbnb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark"  asp-area="" asp-controller="Rental" asp-action="Grid">Rentals</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Table">Your Orders</a>
                        </li>
                    
                       
                    </ul>
                  
                    @* <partial name="_LoginPartial" /> *@
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class ="navbar-nav flex-grow-2">
                        <li class="nav-item" style=" margin-left:10px; margin-right:10px; font-weight:1000;">
                            <form style="display: inline">
                                <button class="btn btn-primary align-items-end" style="height: 3rem; color:white">Login</button>
                            </form>
                        </li>
                        <li class="nav-item" style=" margin-left:10px; margin-right:10px; border-radius: 30px;font-weight:1000;">
                            <form style="display: inline">
                                <button id="reg" class="btn btn-outline-secondary align-items-end" style="height: 3rem;">Register</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3"> 
            @RenderBody()
            @* @RenderSection("Scripts", required: false) *@
        </main>
    </div>




</body>

</html>
