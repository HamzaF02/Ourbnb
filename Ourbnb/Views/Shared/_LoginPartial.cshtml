@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style=" width: 125px; text-align:left; margin-top:5px; margin-right:10px;">Hello @UserManager.GetUserName(User)!</a>
    </li>
        <li class="nav-item" style=" margin-top:5px;">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn btn-primary align-items-end" style="margin-right:10px;">Logout</button>
        </form>
    </li>
}
else
{
  
        <li class="nav-item" style="margin-top:5px; margin-left:10px; margin-right:10px; border-radius: 30px;font-weight:bold;">
            <form style="display: inline">
                <button class="btn btn-outline-dark align-items-end" id="register" asp-area="Identity" asp-page="/Account/Register" style="height: 3rem;">Register</button>
            </form>
        </li>

        <li class="nav-item" style=" margin-top:5px; margin-left:10px; margin-right:10px; font-weight:bold;">
            <form style="display: inline">
                <button class="btn btn-primary align-items-end" id="login" asp-area="Identity" asp-page="/Account/Login" style="height: 3rem; color:white">Login</button>
            </form>
        </li>
}
</ul>
