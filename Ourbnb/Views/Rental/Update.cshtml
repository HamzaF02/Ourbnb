@{
    ViewData["Title"] = "Update Rental";
}
@model CreateRental

<h2>Update Rental</h2>

<!-- error msg if date invalid or cration failed -->
@if (@Model.message != null)
{
    <p class="text-danger">@Model.message</p>
}


<form asp-action="Update">
    <input type="hidden" asp-for="Rental.RentalId" />
    <input type="hidden" asp-for="Rental.Orders" />
    <input type="hidden" asp-for="Rental.OwnerId" />
    <input type="hidden" asp-for="Rental.Owner" />
    <input type="hidden" asp-for="Rental.Rating" />
    <input type="hidden" asp-for="Rental.IdentityId" />
    <div class="form-group">
        <label asp-for="Rental.Name"></label><span class="text-danger">*</span>
        <input asp-for="Rental.Name" class="form-control" />
        <span asp-validation-for="Rental.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rental.Location"></label>
        <input asp-for="Rental.Location" class="form-control" />
        <span asp-validation-for="Rental.Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rental.Price"></label><span class="text-danger">*</span>
        <input asp-for="Rental.Price" class="form-control" />
        <span asp-validation-for="Rental.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rental.FromDate"></label>
        <input asp-for="Rental.FromDate" class="form-control" type="date" />
        <span asp-validation-for="Rental.FromDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rental.ToDate"></label>
        <input asp-for="Rental.ToDate" class="form-control" type="date" />
        <span asp-validation-for="Rental.ToDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rental.Description"></label>
        <input asp-for="Rental.Description" class="form-control" />
        <span asp-validation-for="Rental.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rental.Image"></label>
        <input asp-for="Rental.Image" class="form-control" />
        <span asp-validation-for="Rental.Image" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Grid" class="btn btn-secondary">Back to Rentals</a>
</form>