@model Rental

<h2>Remove Rental</h2>

<h3>Are you sure you want to remove this rental</h3>
<div>
    <h4>Order</h4>
    <dl class="row">
        <dt class="col-sm-2">RentalId:</dt>
        <dd class="col-sm-10">@Model.RentalId</dd>

        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description:</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price:</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Location:</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Rating:</dt>
        <dd class="col-sm-10">@Model.Rating</dd>

        <dt class="col-sm-2">From:</dt>
        <dd class="col-sm-10">@Model.FromDate</dd>
        <dt class="col-sm-2">To:</dt>
        <dd class="col-sm-10">@Model.ToDate</dd>

        <dt class="col-sm-2">Owner:</dt>
        <dd class="col-sm-10">@Model.Owner.FirstName @Model.Owner.LastName</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.RentalId" method="post">
        <button type="submit" class="btn btn-danger">Remove</button>
        <a asp-action="Grid" class="btn btn-secondary">Cancel</a>

    </form>
</div>